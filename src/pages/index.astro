

---
import CustomCard from '../components/CustomCardReact.jsx';
import { getIncidents } from '../services/incidents.js';

const incidents = await getIncidents();
---
<main>
	<div class="container">
        <h1>Incident List</h1>
        <ul>
            {incidents.map((incident) => (
                <li>
                    <CustomCard
                        client:visible
                        incident = {incident}
                    />
                </li>
            ))}
        </ul>
        
    </div>
</main>

<style>
.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}

h1 {
    font-size: 24px;
    margin-bottom: 20px;
}

ul {
    list-style-type: none;
    padding: 0;
}

li {
    margin-bottom: 20px;
}

h2 {
    font-size: 18px;
    margin-bottom: 5px;
}

p {
    font-size: 14px;
    margin-bottom: 10px;
}
</style>